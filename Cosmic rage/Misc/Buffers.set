   }
  };
   #Say {%Replace(@CurrentHistoryBuffer,0, ), %NumWords(@{History@{CurrentHistoryBuffer}Messages},|) items.} VoiceOnly;
  #Var CurrentHistoryBufferPosition 1;
#Abort all
};
 #If {"back"=*@HistoryTmp1} {
