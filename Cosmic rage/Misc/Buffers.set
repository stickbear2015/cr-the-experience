      } {
       #Math HistoryTmp1 {@HistoryTmp1+1};
       #Var CurrentHistoryBuffer {%Word(@{@HistoryTmp3},|,@HistoryTmp1)}
      }
     };
#Exec {    #Var HistoryTmp1 {@HistoryTmp2}}
    }
   }
  } {
   #Var HistoryTmp1 {%Trim(%2)*};
   #ForAll {@{@HistoryTmp3}} {
    #If {%i=*@HistoryTmp1} {
     #Var HistoryTmp1 {%i}
    }
   };
