#pc @musicHandle volume @musicvol};
#File 6 {cosmic rage/misc/settings.set} 2;#Var SettingsFileCounter 2;
#Write 6 @Musicvol @SettingsFileCounter;#Math SettingsFileCounter {@SettingsFileCounter +1};
#close 6}

